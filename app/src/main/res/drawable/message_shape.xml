<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F38D46" />
        </shape>

    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="1%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#995525" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="#be682c" />
            </shape>
        </rotate>
    </item>

</layer-list>